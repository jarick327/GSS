    <script>
        // Tab functionality (moved outside DOMContentLoaded to be globally accessible)
        function showTab(tabId) {
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
                tab.setAttribute('aria-hidden', 'true');
            });
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            document.getElementById(tabId).classList.add('active');
            document.getElementById(tabId).setAttribute('aria-hidden', 'false');
            document.querySelector(`button[onclick="showTab('${tabId}')"]`).classList.add('active');
        }

        // Ensure DOM is fully loaded before running Chart.js
        document.addEventListener('DOMContentLoaded', function () {
            // Chart.js configuration
            const chartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: { backgroundColor: '#007bff', titleColor: '#ffffff', bodyColor: '#ffffff' }
                },
                scales: {
                    x: { ticks: { autoSkip: false, maxRotation: 0, minRotation: 0, color: '#000000' } }, // No rotation for cleaner labels
                    y: { beginAtZero: true, max: 100, ticks: { callback: value => value + '%', color: '#000000' } }
                }
            };

            const lineChartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: { backgroundColor: '#007bff', titleColor: '#ffffff', bodyColor: '#ffffff' }
                },
                scales: {
                    x: { ticks: { color: '#000000' } },
                    y: { beginAtZero: false, max: 100, ticks: { color: '#000000' } }
                }
            };

            const pieOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'right', labels: { color: '#000000', font: { size: 12 } } },
                    tooltip: { backgroundColor: '#007bff', titleColor: '#ffffff', bodyColor: '#ffffff' }
                }
            };

            // NPS Chart
            new Chart(document.getElementById('npsChart'), {
                type: 'bar',
                data: {
                    labels: ['Total', 'Sacramento', 'San Diego'],
                    datasets: [{
                        label: 'NPS',
                        data: [69, 89, 64],
                        backgroundColor: ['#007bff', '#ffd700', '#00bfff'],
                        borderColor: '#ffffff',
                        borderWidth: 1
                    }]
                },
                options: chartOptions
            });

            // NPS Trend Chart
            new Chart(document.getElementById('npsTrendChart'), {
                type: 'line',
                data: {
                    labels: ['Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug'],
                    datasets: [{
                        label: 'NPS Trend',
                        data: [69, 73, 72, 68, 71, 77],
                        borderColor: '#ffd700',
                        backgroundColor: 'rgba(255, 215, 0, 0.2)',
                        fill: true,
                        tension: 0.3
                    }]
                },
                options: lineChartOptions
            });

            // Strengths Chart - Removed as per previous request
            // No chart instantiation here

            // Improvements Chart - Removed as per request
            // No chart instantiation here

            // Multi-Choice Charts
            new Chart(document.getElementById('enjoyChart'), {
                type: 'bar',
                data: {
                    labels: ['Hype Vibes', 'Crew Play', 'Host Energy', 'Games', 'Set'],
                    datasets: [{ data: [24, 24, 21, 18, 13], backgroundColor: '#007bff' }]
                },
                options: chartOptions
            });

            new Chart(document.getElementById('compareChart'), {
                type: 'bar',
                data: {
                    labels: ['Way More Fun', 'Bit Better', 'Same', 'Less Exciting', 'Prefer Escapes', 'Not My Thing'],
                    datasets: [{ data: [58, 22, 10, 5, 3, 1], backgroundColor: '#007bff' }]
                },
                options: chartOptions
            });

            new Chart(document.getElementById('eventChart'), {
                type: 'bar',
                data: {
                    labels: ['Work team', 'Celebrations', 'Family', 'Date night'],
                    datasets: [{ data: [36, 35, 25, 3], backgroundColor: '#007bff' }]
                },
                options: chartOptions
            });

            new Chart(document.getElementById('valueChart'), {
                type: 'bar',
                data: {
                    labels: ['Totally worth it', 'Good', 'Fine', 'Bit Pricey', 'Overpriced'],
                    datasets: [{ data: [29, 32, 20, 14, 5], backgroundColor: '#007bff' }]
                },
                options: chartOptions
            });

            new Chart(document.getElementById('favoriteGameChart'), {
                type: 'pie',
                data: {
                    labels: ['Survey Showdown (Family Feud-style)', 'I liked them all equally', 'Wheel of Wonder (Spin + Solve style)', 'None stood out', 'Over and Under (Price is Right + Plinko)'],
                    datasets: [{
                        data: [34, 13, 12, 3, 1],
                        backgroundColor: ['#007bff', '#00bfff', '#ffd700', '#ff4500', '#4682b4']
                    }]
                },
                options: pieOptions
            });

            new Chart(document.getElementById('improveGameChart'), {
                type: 'pie',
                data: {
                    labels: ['None - they were all great', 'Over and Under', 'Wheel of Wonder', 'Survey Showdown'],
                    datasets: [{
                        data: [28, 19, 10, 5],
                        backgroundColor: ['#007bff', '#00bfff', '#ffd700', '#ff4500']
                    }]
                },
                options: pieOptions
            });

            new Chart(document.getElementById('lengthChart'), {
                type: 'pie',
                data: {
                    labels: ['Just right', 'Too short - I wanted more time!'],
                    datasets: [{
                        data: [29, 24],
                        backgroundColor: ['#007bff', '#ffd700']
                    }]
                },
                options: pieOptions
            });
        });
